{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build example_01",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/examples/example_01"
            }
        },
        {
            "label": "clean example_01",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}/examples/example_01"
            }
        }
    ]
}